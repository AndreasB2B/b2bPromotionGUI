@page
@model KN.B2B.Web.Pages.Private.Masterdata.B2BCategories.IndexModel

@{
    ViewData["Title"] = "B2BCategories Index";
}

<h1>B2B Categories</h1>

<p>
    <a asp-page="./Edit" class="btn btn-primary">
        <i class="fa fa-plus"></i>
        Add new
    </a>
    <a class="btn btn-secondary" asp-page="../Index">
        <i class="fa fa-list"></i>
        Main
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.B2BCategories[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B2BCategories[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B2BCategories[0].CategoryDK)
            </th>
            <th>
                Category Group
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.B2BCategories)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDK)
            </td>
            <td>
                @if (item.CategoryGroup != null)
                {
                    @item.CategoryGroup.CategoryGroup;
                }
            </td>

            <td style="text-align:right">

                <a class="btn btn-lg" asp-page="./Edit" asp-route-id="@item.Id">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-id="@item.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
