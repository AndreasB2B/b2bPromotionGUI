@page
@model KN.B2B.Web.Pages.Private.Requests.IndexModel

@{
    ViewData["Title"] = "Requests";
}

<h1>Requests</h1>
@if (TempData["Message"] != null && string.IsNullOrEmpty(TempData["Message"].ToString()) == false)
{
    <p style="color:red">
        @TempData["Message"]
    </p>
}
<p>
    <a asp-page="./Edit" class="btn btn-primary">
        <i class="fa fa-plus"></i>
        Add new
    </a>
</p>
<form method="get">
    <div class="form-group">
        <div class="input-group mb-3">
            <input class="form-control" autocomplete="off" type="search" asp-for="SearchQuery" placeholder="Search requests by customer name" />
            <div class="input-group-append">
                <button class="btn btn-success" type="submit">
                    <i class="fas fa-search"></i>
                    Search
                </button>
            </div>
        </div>
    </div>
</form>
<partial name="_List" model="@Model.Requests" />
